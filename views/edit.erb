<h1>Student Form Edit</h1>

<form action="/students/<%= @student.id %>" method="post">
  <p><label>First Name: <input type="text" name="first_name" value="<%= @student.first_name %>"/></label></p>
  <p><label>Last Name: <input type="text" name="last_name" value="<%= @student.last_name %>"/></label></p>
  <p><label>House: 
    <select name="house">
      <option <%= "selected" if @student.house == "Griffindor" %> value="Griffindor">Griffindor</option>
      <option <%= "selected" if @student.house=="Hufflepuff" %> value ="Hufflepuff">Hufflepuff</option>
      <option <%= "selected" if @student.house=="Ravenclaw" %> value="Ravenclaw">Ravenclaw</option>
      <option <%= "selected" if @student.house=="Slytherin" %> value="Slytherin">Slytherin</option>
    </select>
  </label></p>  
  <p><label>age: <input type="number" name="age" value="<%= @student.age %>"/></label></p>
  <p><input type="submit" value="Change Student Details" /></p>
</form>